format-prefix-padding       = 1
format-underline            = #ff5555
label                       = %{T1}%percentage:2%%%{T-}
label-background            = ${colors.background-alt1}
label-foreground            = ${colors.foreground}
label-padding               = 1

[module/memory]
type                        = internal/memory
interval                    = 1

format                      = <label>
