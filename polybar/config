border-color = ${colors.background}

;under-/overline pixel size and argb color
line-size  = 3
line-color = #f00

fixed-center = false
wm-name = i3

;number of spaces to add at the begimmimg/end of the bar
padding-left  = 0
padding-right = 0

;number  of spaces to add before/after each module
module-margin-left  = 1
module-margin-right = 0.5

;fonts config
font-0 = "Source Code Pro:size=11:antialias=true;0"
font-1 = "Source Code Pro:size=11:style=Bold:antialias=true;0"
font-2 = "Font Awesome 5 Free:size=10;1"
font-3 = "Font Awesome 5 Free Solid:pixelsize=12;2"
font-4 = "Font Awesome 5 Brands:pixelsize=12;1"
font-5 = "Weather Icons:size=13;1:style:Regular"
font-6 = "Inconsolata Nerd Font:size=14;1"


;modules set
modules-left   = i3 spotify eth xkeyboard
modules-center =
