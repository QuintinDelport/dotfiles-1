;#-------------------------------------------#
;#------------------- I3 --------------------#
;
[module/i3]
type                    = internal/i3
format                  = <label-state> <label-mode>
index-sort              = true
wrapping-scroll         = false

;Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding              = 1.5
label-mode-foreground           = #000
label-mode-background           = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused                   = %index%
label-focused-background        = ${colors.background-alt}
label-focused-foreground        = #EAFFFF
label-focused-underline         = #82aaff
label-focused-padding           = 1.5

; visible = Active workspace on unfocused monitor
label-visible                   = %index%
label-visible-background        = ${colors.background-alt}
label-visible-foreground        = ${colors.foreground}
label-visible-underline         = ${self.label-focused-underline}
label-visible-padding           = ${self.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused             = %index%
label-unfocused-padding     = 1.5

; urgent = Workspace with urgency hint set
label-urgent                = %index%
label-urgent-background     = ${colors.alert}
label-urgent-foreground     = #000000
label-urgent-underline      = ${colors.alert}
label-urgent-padding        = 1.5

; Separator in between workspaces
; label-separator = |


;#-------------------------------------------#
;#----------------- Audio -------------------#
;
[module/spotify]
type                        = custom/script
exec                        = ~/.config/polybar/scripts/spotify.sh %title%
tail                        = true
interval                    = 1

format-prefix               =%{T4}%{T-}
format-prefix-background    = #0f0
format-prefix-foreground    = ${colors.background}
format-prefix-padding       = 1
format-underline            = #0f0
label                       = %output:0:150%
label-background            = ${colors.background-alt1}
label-foreground            = ${colors.foreground}
label-padding               = 1

[module/microphone]
type                                = custom/script
exec                                = ~/.config/polybar/scripts/mic.sh
tail                                = true
click-left                          = kill -USR1 %pid%
format                              = <label>
format-underline                    = #1f232c
label                               = %output%
label-background                    = ${colors.background-alt1}
label-padding                       = 1


